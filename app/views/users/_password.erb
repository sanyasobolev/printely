<div class="form_align">
  <%= form.label :password %>
  <%= form.password_field :password,
                          :size => User::PASSWORD_SIZE,
                          :maxlength => User::PASSWORD_MAX_LENGTH %>
</div>

<div class="form_align">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation,
                          :size => User::PASSWORD_SIZE,
                          :maxlength => User::PASSWORD_MAX_LENGTH %>
</div>