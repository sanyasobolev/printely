<%= error_messages_for :user %>
<h1>Редактирование данных пользователя</h1>
<div class="form_shape">
  <%= form_for :user, :url => user_path(@user), :html => {:method => :put} do |f| %>

    <%= hidden_field_tag "attribute", "email", :id => nil %>
    <%= render :partial => 'profile', :locals => {:form => f} %>
    <%  if @user != current_user %>
      <%= render :partial => 'edit_role', :locals => {:form => f} %>
    <%  end %>

    <div class="submit_area">
      <%= submit_tag 'Изменить данные', :class => 'submit' %>
    </div>
  <% end %>
</div>

<div class="form_shape">
  <%= form_for :user, :url => user_path(@user), :html => {:method => :put} do |f| %>

      <%= hidden_field_tag "attribute", "password", :id => nil %>
      <%= render :partial => 'update_password', :locals => {:form => f} %>

      <div class="submit_area">
        <%= submit_tag 'Изменить пароль', :class => 'submit' %>
      </div>
  <% end %>
</div>

<p>
<%= link_to 'К списку пользователей >>', users_path if current_user.has_role?('Administrator') %>
</p>
