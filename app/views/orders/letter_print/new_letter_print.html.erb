<% content_for :head do %>
	<%= javascript_include_tag "orders/letter_print_order" %>
	<%= javascript_include_tag "fabric/fabric_ext" %>
<% end %>
<h2><%= @title %></h2>

<% key = Rails.application.config.session_options[:key] %>

<%= content_for :scripts do %>
  <script type="text/javascript">
    var upload_params = {
      '<%= key %>' : '<%= cookies[key] %>',
      '<%= request_forgery_protection_token %>' : '<%= form_authenticity_token %>',
      '_http_accept': 'application/javascript'
    };
	
  </script>
<% end %>

<%= form_for @order, :url => order_path(@order), :html => { :method => :put, :id => @order.id, :class => "edit_letter_print_order"} do |order| -%>

  <h2 class="orange">Выберите размер конверта и тип бумаги</h2>

  	<%= render :partial => 'documents/letter_print/document', :locals => {:order => @order, :document => @document} %>	

    <%= render :partial => 'orders/share/total_and_submit', :locals => {:order => order, :current_order => @order}  %>	

<% end -%>
  <%= render :partial => 'orders/share/cancel', :locals => {:current_order => @order}  %>	
 