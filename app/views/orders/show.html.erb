<h2><%= @title %></h2>
<div class="container_for_label_cost_order">
  <%= label(:order, :cost) %>
    <div class="container_for_cost_order">
      <%=h (number_to_currency(@order.cost, :unit => "коп.", :separator => " руб. ")) %>
    </div>
</div>
<div class="container_for_label_status_order">
    <%= label(:order, :status) %>
  <div class="container_for_status_order">
    <%=h @order.status %>
  </div>
</div>
<div class="container_for_label_created_at_order">
  <%= label(:order, :created_at) %>
    <div class="container_for_created_at_order">
      <%= Russian::strftime(@order.created_at, "%R, %d %B %Y года") %>
    </div>
</div>

<div class="fl_clear"></div>
<h2 class="orange"> Файлы </h2>
<table id="fileList">
  <tr id="fileList_header">
    <%= render :partial=>'header_table_with_documents' %>
  </tr>
  <%= render :partial=>'show_document', :collection => @order.documents %>
</table>

<h2 class="orange"> Доставка </h2>
 <table class="order_delivery">
    <%= render :partial => 'header_table_with_delivery', :locals => {:order => @order} %>
    <tr>
      <td class="delivery_street">
        <%= @order.delivery_street %>
      </td>
      <td class="delivery_address">
        <%= @order.delivery_address %>
      </td>
      <td class="delivery_date">
         время <%= render :partial => 'delivery_period', :locals => {:order => @order} %>
      </td>
      <td class="delivery_price">
        <%= h (number_to_currency(@order.delivery_price, :unit => "коп.", :separator => " руб. ")) %>
      </td>
    </tr>
  </table>
<br />
<table>
  <tr>
    <% if current_user.has_role?('Administrator') %>
      <td>
        <%= link_to 'К списку заказов', admin_orders_path, :class => "button_style_long" %>
      </td>
    <% else %>
      <td>
        <%= link_to 'К моим заказам', my_orders_path, :class => "button_style_long" %>
      </td>
    <% end %>
  </tr>
</table>


