<div id="cover_<%= format %>">
  <h2><%= title %></h2>
  <table>
    <tr>
      <td><%= label(:order, :client, :class => 'bold') %>:</td>
      <td><%= order.user.first_name %> <%= order.user.second_name %></td>
    </tr>
    <tr>
      <td class="bold"><%= User.human_attribute_name("phone") %>:</td>
      <td><%= order.user.phone %> </td>
    </tr>
    <tr>
      <td class="bold"><%= Document.human_attribute_name("quantity") %>:</td>
      <td><%= documents_quantity %> </td>
    </tr>
    <tr>
      <td class="bold"><%= label(:order, :cost)%>:</td>
      <td><%=h (number_to_currency(order.cost, :unit => "коп.", :separator => " руб. ")) %></td>
    </tr>
  </table>
  <br />
  <br />
  <br />
  <h2> Информация о доставке </h2>
  <table>
    <tr>
      <td><%= label(:order, :delivery_street, :class => 'bold')%>:</td>
      <td><%= order.delivery_street %></td>
    </tr>
    <tr>
      <td><%= label(:order, :delivery_address, :class => 'bold')%>:</td>
      <td><%= order.delivery_address %></td>
    </tr>
    <tr>
      <td><%= label(:order, :delivery_date, :class => 'bold')%>:</td>
      <td><%=h (Russian::strftime(order.delivery_date, "%d %B %Y года")) %></td>
      <td>
        <%= label(:order, :delivery_start_time) %>
        <%= h (Russian::strftime(order.delivery_start_time, "%R")) %>
        <%= label(:order, :delivery_end_time) %>
        <%= h (Russian::strftime(order.delivery_end_time, "%R")) %>
      </td>
    </tr>
  </table>
  <%=  image_tag('logo_sbold_black.png') %>
</div>
