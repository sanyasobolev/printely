<tr class="document" id="document_<%= show_document.id %>">
    <td class="upload">
      <%= image_tag show_document.docfile.thumb.url, :class => 'thumb' %>
    </td>
    <td class="paper_size">
      <p class="center">
        <%= read_paper_size(show_document) %>
      </p>
    </td>
    <td class="paper_type">
      <p class="center">
        <%= read_paper_type(show_document) %>
      </p>
    </td>
    <td class="quantity">
      <p class="center">
        <%= show_document.quantity %>
      </p>
    </td>
    <td class="margins">
      <p class="center">
        <%= read_print_margins(show_document) %>
      </p>
    </td>
    <td class="user_comment">
      <%= show_document.user_comment %>
    </td>
    <td class="document_price ">
      <%= h (number_to_currency(show_document.price, :unit => "коп.", :separator => " руб. ")) %>
    </td>
</tr>
