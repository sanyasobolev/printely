<% if current_user && current_user.has_role?('Administrator')  %>
	<tr>
	  <td><%= link_to 'X', lists_document_specification_path(document_specification), :confirm => 'Вы действительно хотите удалить?', :method => :delete %></td>
	  <td><%= h (document_specification.paper_specification.full_paper_format) %></td>
	  <td><%= h (document_specification.print_margin.margin) %></td>
	  <td><%= h (document_specification.price) %></td>
	  <td><%= h (boolean_to_ru(document_specification.available)) %></td>
	  <td><%= link_to 'Редактировать', edit_lists_document_specification_path(document_specification) %></td>
	</tr>
<% elsif document_specification.available %>
	<tr>
	  <td><%= h (document_specification.paper_specification.paper_size_with_iso) %></td>
	  <td><%= h (document_specification.paper_specification.paper_type_with_grade) %></td>
	  <td><%= h (document_specification.print_margin.margin) %></td>
	  <td><%= h (document_specification.price) %></td>
	</tr>
<% end %>
