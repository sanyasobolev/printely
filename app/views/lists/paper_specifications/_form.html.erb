<div class="form_align">
	<%= f.label :paper_type_id %>
	<%= f.collection_select(:paper_type_id,
                      Lists::PaperType.find(:all),
                      :id,
                      :paper_type_with_grade) %>
</div>

<div class="form_align">
	<%= f.label :paper_size_id %>
	<%= f.collection_select(:paper_size_id,
                      Lists::PaperSize.find(:all),
                      :id,
                      :paper_size_with_iso) %>
</div>

<div class="form_align">
	<%= f.label :price %>
  	<%= f.text_field :price, :class => 'req_input'  %>
</div>

<div class="form_align">
	<%= f.label :in_stock%>
  	<%= f.check_box :in_stock %>
</div>

<div class="form_align">
	<%= f.label :order_type_id %>
	<%= f.collection_select(:order_type_id,
                      Lists::OrderType.find(:all),
                      :id,
                      :title) %>
</div>

<div class="form_align">
	<%= f.label :layout %>
    <%= image_tag(pspec.layout.admin_thumb.url) if pspec.layout? %>
    <%= f.file_field :layout %>
    <%= f.hidden_field :layout_cache %>
</div>

<div class="form_align">
	<%= f.label :remove_layout %>
	<%= f.check_box :remove_layout%>
</div>



