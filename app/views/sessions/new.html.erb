  <div class="form_shape">
      <%= form_for :user, :url => :login do |form| %>
        <div class="form_align">
            <%= form.label(:email) %>
            <%= form.text_field :email,
                                :size => User::EMAIL_SIZE,
                                :maxlength => User::EMAIL_MAX_LENGTH %>
        </div>

        <div class="form_align">
        <%= form.label(User.human_attribute_name(:password)) %>
        <%= form.password_field :password,
                                :size => User::PASSWORD_SIZE,
                                :maxlength => User::PASSWORD_MAX_LENGTH %>
       	<%= link_to 'Забыли пароль?', forgot_password_users_path, :id=>"forgot_password" %>

        </div>


       
        <div class="submit_area">
          <%= submit_tag "Войти", :class => 'submit' %>
        </div>
		<div class="fl_clear"></div>
      <% end %>
  </div>
    <p class="text-center">
      Впервые на сайте? <%= link_to "Зарегистрируйтесь", new_user_path, :id => "sign_in" %>
    </p>
    
