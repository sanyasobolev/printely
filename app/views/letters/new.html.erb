<%= error_messages_for :letter %>
<h2>Обратная связь</h2>
<div class="form_shape">
  <%= form_for :letter, :url => letters_path, :html => { :method => :post } do |f| -%>

    <div class="form_align">
      <%= f.label(:name) %>
      <%= f.text_field :name,
                       :maxlength =>Letter::NAME_MAX_LENGTH %>
    </div>

    <div class="form_align">
        <%= f.label(:company) %>
        <%= f.text_field :company,
                         :maxlength =>Letter::COMPANY_MAX_LENGTH %>
    </div>

    <div class="form_align">
        <%= f.label(:phone) %>
        <%= f.text_field :phone,
                         :maxlength =>Letter::PHONE_MAX_LENGTH %>
    </div>

    <div class="form_align">
      <%= f.label(:email) %>
      <%= f.text_field :email,
                       :maxlength =>Letter::EMAIL_MAX_LENGTH %>
    </div>

    <div class="form_align">
      <%= f.label(:question) %>
      <%= f.text_area :question %>
    </div>

  <div class="button_area">
    <%= submit_tag 'Отправить', :class =>'button' %>
  </div>

  <% end -%>
</div>