<div class="article">
  <div class="article_img">
    <%= link_to image_tag(article_for_user.header_image.url, :border => "0"), article_path(article_for_user) %>
  </div>
  <div class="article_title">
    <%= raw(article_for_user.title) %>
  </div>
  <div class="article_synopsis">
    <%= raw(article_for_user.synopsis) %>
  </div>
  <div class="article_goto">
    <%# if @category_for_route %>
      <%#= link_to image_tag("icons/goto_link.png", :border => "0"), {:category_name => @category_for_route, :id => article_for_user} %>
    <%# else %>
      <%= link_to image_tag("icons/goto_link.png", :border => "0"), article_path(article_for_user) %>
    <%# end %>
  </div>
</div>