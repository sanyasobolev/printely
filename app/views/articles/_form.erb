<p>
  <%= Article.human_attribute_name("title") %><br />
  <%= f.text_field :title,
                   :size => Article::TITLE_SIZE,
                   :maxlength =>Article::TITLE_MAX_LENGTH %>
</p>

<p>
  <%= Article.human_attribute_name("synopsis") %><br />
  <%= f.cktext_area :synopsis,
                    :rows => Article::SYNOPSIS_ROWS_SIZE,
                    :cols => Article::SYNOPSIS_COLS_SIZE,
                    :height => '150px',
                    :language => 'ru'
                    %>
</p>

<p>
  <%= Article.human_attribute_name("body") %><br />
  <%= f.cktext_area :body,
                    :rows => Article::BODY_ROWS_SIZE,
                    :cols => Article::BODY_COLS_SIZE,
                    :height => '400px',
                    :language => 'ru'
                    %>
</p>

<p>
  <%= f.label :header_image %>
  <%= f.file_field :header_image %>
</p>

<p>
  <%= Article.human_attribute_name("category_id") %><br />
  <%= f.collection_select(:category_id,
                          Category.find(:all),
                          :id,
                          :name) %>
</p>

<p>
  <%= Article.human_attribute_name("published") %>
  <%= f.check_box :published %>
</p>