<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
  <title><%= @title %></title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style type="text/css"><%= yield :stylesheets %></style>
  <%= yield :head %>
  <link rel="icon" href="/assets/favicon.ico" type="image/x-icon">
</head>
<body>
<!-- Yandex.Metrika counter -->
<script type="text/javascript">
(function (d, w, c) {
    (w[c] = w[c] || []).push(function() {
        try {
            w.yaCounter22080970 = new Ya.Metrika({id:22080970,
                    webvisor:true,
                    clickmap:true,
                    accurateTrackBounce:true});
        } catch(e) { }
    });

    var n = d.getElementsByTagName("script")[0],
        s = d.createElement("script"),
        f = function () { n.parentNode.insertBefore(s, n); };
    s.type = "text/javascript";
    s.async = true;
    s.src = (d.location.protocol == "https:" ? "https:" : "http:") + "//mc.yandex.ru/metrika/watch.js";

    if (w.opera == "[object Opera]") {
        d.addEventListener("DOMContentLoaded", f, false);
    } else { f(); }
})(document, window, "yandex_metrika_callbacks");
</script>
<script src="//api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
<noscript><div><img src="//mc.yandex.ru/watch/22080970" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
<!-- /Yandex.Metrika counter -->
  <div id="header" >
    <div id="top_nav">
        <div id="user_options">
          <% if logged_in? -%>
            <%= render :partial => 'sessions/current' %>
          <% else -%>
            <%= link_to image_tag("icons/Login.png", :border => '0'), :login, :class => 'box_user_opt' %>
          <% end -%>
        </div>
        <ul id="top_menu">
	        <%= render :partial => 'share/header_menu' %>
		</ul>
        <div id="logo_container">
          <%= link_to image_tag("logo_sbold.png", :border => '0'), :root, :class => 'logo' %>
        </div>
    </div>
  </div>

  <div id="middle_panel">
    <%= content_for?(:middle_panel) ? yield(:middle_panel) : '' %>
  </div>

  <div id="flash_panel">
    <% if flash[:notice] -%>
      <div id="notice" ><%= flash[:notice] %></div>
    <% end -%>

    <% if flash[:error] -%>
      <div id="error" ><%= flash[:error] %></div>
    <%  end -%>
  </div>

  <div id="content_panel">
    <%= content_for?(:content_panel) ? yield(:content_panel) : yield %>
  </div>


  <div id="contact_bottom_panel">
    <div id="bot_nav">
      <%= render :partial => 'share/contacts' %>
    </div>
  </div>

  <div id="first_bottom_panel">
    <div id="bot_nav">
      <%= render :partial => 'share/bottom_about_us' %>
    </div>
  </div>

  <div id="second_bottom_panel">
    <div id="bot_nav">
      <%= render :partial => 'share/bottom_menu' %>
    </div>
  </div>

  <% if logged_in? && current_user.has_role?('Administrator') %>
    <%= render :partial => 'share/admin_menu' %>
  <% end %>

  <%= yield :scripts %>

  </body>

</html>
