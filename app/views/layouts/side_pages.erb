<% content_for :stylesheets do %> 
  #sidebar
  #content
  #boardlinks
<% end %>

<% content_for :middle_panel do %>
  <div id="boardlinks">
    <div id="boardlinks_nav">
      <%= boardlinks %>
    </div>
  </div>
<% end %>

<% content_for :content_panel do %>
  <div id="sidebar">
    <%= render :partial => 'page_of_subsection', :collection => @current_subsection.pages.published, :locals => {:current_section => @current_subsection.section, :current_subsection => @current_subsection} %>
  </div>
  <div id="content">
    <%= yield %>
  </div>
<% end %>

<%= render :template => 'layouts/application' %>