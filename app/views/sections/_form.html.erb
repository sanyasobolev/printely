	<div class="form_align">
		<%= f.label :title %>
		<%= f.text_field :title, :maxlength => Section::TITLE_MAX_LENGTH ,:class => 'req_input' %>
	</div>

	<div class="form_align">
		<%= f.label :order %>
		<%= f.select :order, Section::SECTION_ORDER, :prompt => 'Выберите порядковый номер раздела' %>
	</div>

	<div class="form_align">
		<%= f.label :controller %>
		<%= f.text_field :controller %>
	</div>
	
	<div class="form_align">
		<%= f.label :action %>
		<%= f.text_field :action %>
	</div>
	
	<div class="form_align">
		<%= f.label :published %>
		<%= f.check_box :published %>
	</div>
	

