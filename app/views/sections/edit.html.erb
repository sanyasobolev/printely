<%= error_messages_for :section %>
<h2>Редактирование раздела</h2>
<div class="form_shape">
  <%= form_for(:section, :url => section_path(@section), :html => {:method => :put}) do |f| -%>
    
    <%= render :partial => 'form', :locals => {:f => f} %>

	    <div class="submit_area">
	      <%= submit_tag 'Сохранить', :class => 'submit' %>
	    </div>  
	<% end %>
	<%= render :partial => 'share/cancel', :locals => {:path => admin_sections_path}  %>	
</div>
