<%= error_messages_for :section %>
<h2>Редактирование раздела</h2>
  <% form_for(:section, :url => section_path(@section), :html => {:method => :put}) do |f| -%>
    
    <%= render :partial => 'form', :locals => {:f => f} %>

    <%= submit_tag 'Сохранить' %> или <%= link_to 'Вернуться', admin_sections_path %>
  <% end %>
