<h2>Собственные страницы в системе</h2>
<%= link_to 'Создать страницу', new_admin_page_path, :class => 'button_style_long' %>

  <h3>Стартовая страница</h3>
    <table class ="default_table">
    <tr class="header">
      <th><%= Page.human_attribute_name("title") %></th>
      <th><%= Page.human_attribute_name("permalink") %></th>
      <th></th>
    </tr>
    <tr class="grey_on_hover">
      <td><%= @main_page.title %></td>
      <td><%= link_to @main_page.permalink, :root %></td>
      <td><%= link_to 'Редактировать', edit_admin_page_path(@main_page) %></td>
    </tr>
    </table>

  <h3>Остальные страницы</h3>
    <table class ="default_table">
      <tr class="header">
        <th></th>
        <th><%= Page.human_attribute_name("title") %></th>
        <th><%= Page.human_attribute_name("permalink") %></th>
        <th><%= Page.human_attribute_name("created_at") %></th>
        <th><%= Page.human_attribute_name("published") %></th>
        <th></th>
      </tr>

      <%= render :partial => 'page', :collection => @pages %>

    </table>



<%= link_to 'Назад', admin_settings_path, :class => 'button_style' %>

