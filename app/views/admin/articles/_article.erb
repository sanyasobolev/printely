<tr class="grey_on_hover">
  <td><%= link_to 'Х', admin_article_path(article), :method => :delete, :confirm => 'Действительно хотите удалить статью?' %></td>
  <td><%= article.title %></td>
  <td><%= article.category.name %></td>
  <td><%= Russian::strftime(article.created_at, "%d %B %Y") %></td>
  <td><%= boolean_to_ru(article.published) %></td>
  <td><%= "#{article.user.first_name} #{article.user.second_name}" %></td>
  <td><%= boolean_to_ru(article.this_news) %></td>
  <td><%= link_to 'Редактировать', edit_admin_article_path(article) %></td>
</tr>