<div class="form_align">
  <%= f.label(:title) %>
  <%= f.text_field :title,
                   :size => Service::TITLE_SIZE,
                   :maxlength => Service::TITLE_MAX_LENGTH,
                   :class => 'req_input'%>
</div>

<div class="form_align">
  <%= f.label(:synopsis) %>
  <%= f.text_area :synopsis,
                   :rows => Service::SYNOPSIS_ROWS_SIZE,
                   :cols => Service::SYNOPSIS_COLS_SIZE,
                   :class => 'req_textarea'%>
</div>

<div class="form_align">
  <%= f.label :service_header_icon %>
  <%= f.file_field :service_header_icon,
                   :class => 'req_input'%>
</div>

<div class="form_align">
  <%= f.label :pricelist %>
  <%= f.select "pricelist", ActiveRecord::Base.connection.tables.collect{|t| t.underscore.singularize.camelize}, { :prompt => true }  %>
</div>

<div class="form_align">
	<%= f.label :order_type_id %>
	<%= f.collection_select(:order_type_id,
                      Lists::OrderType.find(:all),
                      :id,
                      :title) %>
</div>