<%= error_messages_for :service %>
<h2>Редактирование услуги</h2>
<div class="form_shape">
  <%= form_for :service, :url => service_path(@service), :html => { :method => :put, :id => 'edit_service'} do |f| -%>

    <%= render :partial => 'form', :locals => {:f => f} %>

    <div class="submit_area">
      <%= submit_tag 'Сохранить', :class => 'submit' %>
    </div>
  <% end -%>
</div>