select {
	border: 1px solid #D6D3D1;
	font-family: "Segoe UI",helvetica,arial,sans-serif;
}

select.wide {
    height: 35px;
    padding:0px 7px 4px 7px;
    font-size: 1.3em;
}

/*orders parameters selectors*/
select.paper_size_selector, .paper_type_selector, .margins_selector {
	width: 120px;
	float: right;
}

select.envelope_size_selector, .envelope_type_selector{
	width: 400px;
}

select.envelope_size_selector{
	margin-top: 30px;
}

select.print_color_selector {
    width: 100%;
}

select.delivery_town {
    width: 365px;
    float:right;
}


/*quantity selectors-----------------------*/
/*small*/
div.quantity_selector {
	margin: 0 auto;
	width: 116px;
    height: 23px;
}

div.quantity_selector input {
	float:left;
    width: 70px;
    height:20px;
    border: 0px;
    font-family: "Segoe UI",helvetica,arial,sans-serif;
    text-align: center;
}

div.quantity_selector button {
	background-color:transparent;
	float:left;
    cursor: pointer;
    border:0px;
    width:22px;
    height:22px;
}

div.quantity_selector button.decrease_quantity {
    background-image: url('<%= asset_path('icons/minus.png') %>');
}

div.quantity_selector button.increase_quantity {
    background-image: url('<%= asset_path('icons/plus.png') %>');
}

/*wide*/
div.quantity_selector_wide {
	margin: 0 auto;
	width: 192px;
    height: 35px;
}

div.quantity_selector_wide input {
	float:left;
    width: 110px;
    height:32px;
    border: 0px;
    font-family: "Segoe UI",helvetica,arial,sans-serif;
    font-size: 1.3em;
    text-align: center;
}

div.quantity_selector_wide button {
	background-color:transparent;
	float:left;
    cursor: pointer;
    border:0px;
    width:35px;
    height:35px;
}

div.quantity_selector_wide button.decrease_quantity {
    background-image: url('<%= asset_path('icons/minus_large.png') %>');
}

div.quantity_selector_wide button.increase_quantity {
    background-image: url('<%= asset_path('icons/plus_large.png') %>');
}

